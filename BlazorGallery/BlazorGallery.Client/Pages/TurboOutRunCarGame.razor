@page "/turbooutruncargame"
@rendermode InteractiveAuto
@using System.Timers
@implements IDisposable

<div class="turbo-outrun-game" tabindex="0" @onkeydown="HandleKeyDown" @onkeyup="HandleKeyUp" @ref="gameContainer">
    <div class="game-header">
        <h3>🏎️ Turbo OutRun</h3>
        <div class="game-stats">
            <span>Speed: @((int)speed) mph</span>
            <span>Score: @score</span>
            <span>Distance: @((int)distance)m</span>
            <span>Time: @timeRemaining.ToString(@"m\:ss")</span>
        </div>
    </div>

    @if (!gameStarted)
    {
        <div class="game-overlay">
            <h2>🏁 Turbo OutRun</h2>
            <p>Press SPACE to Start</p>
            <p>Use ← → to steer</p>
            <p>↑ Accelerate | ↓ Brake</p>
        </div>
    }

    @if (gameOver)
    {
        <div class="game-overlay">
            <h2>@(timeRemaining <= TimeSpan.Zero ? "⏱️ Time's Up!" : "💥 Crashed!")</h2>
            <p>Final Score: @score</p>
            <p>Distance: @((int)distance)m</p>
            <button @onclick="RestartGame">Play Again</button>
        </div>
    }

    <div class="game-area">
        <!-- Sky gradient -->
        <div class="sky">
            <div class="sun"></div>
            @foreach (var cloud in clouds)
            {
                <div class="cloud" style="left: @(cloud.X)px; top: @(cloud.Y)px; transform: scale(@cloud.Scale);">☁️</div>
            }
        </div>

        <!-- Mountains/horizon -->
        <div class="horizon">
            @for (int i = 0; i < 8; i++)
            {
                <div class="mountain" style="left: @(i * 100 - horizonOffset % 100)px;"></div>
            }
        </div>

        <!-- Road -->
        <div class="road-container">
            @for (int i = 0; i < RoadSegments; i++)
            {
                var segment = GetRoadSegment(i);
                <div class="road-segment" style="
                    bottom: @(i * SegmentHeight)px;
                    height: @(SegmentHeight + 1)px;
                    --road-width: @(segment.RoadWidth)px;
                    --grass-color: @(segment.IsStripe ? "#228B22" : "#32CD32");
                    --rumble-color: @(segment.IsStripe ? "#FF0000" : "#FFFFFF");
                    --road-color: @(segment.IsStripe ? "#444444" : "#555555");
                    --lane-color: @(segment.IsStripe ? "#FFFFFF" : "#555555");
                    transform: translateX(@(segment.Curve)px);
                ">
                    <div class="grass left"></div>
                    <div class="rumble left"></div>
                    <div class="road-surface">
                        <div class="lane-marker left"></div>
                        <div class="lane-marker right"></div>
                    </div>
                    <div class="rumble right"></div>
                    <div class="grass right"></div>
                </div>
            }

            <!-- Other cars -->
            @foreach (var car in otherCars)
            {
                var carVisual = GetCarVisual(car);
                @if (carVisual.Visible)
                {
                    <div class="other-car" style="
                        bottom: @(carVisual.ScreenY)px;
                        left: calc(50% + @(carVisual.ScreenX)px);
                        transform: translateX(-50%) scale(@carVisual.Scale);
                        z-index: @(100 - (int)carVisual.ScreenY);
                    ">
                        @car.Emoji
                    </div>
                }
            }

            <!-- Roadside objects -->
            @foreach (var obj in roadsideObjects)
            {
                var objVisual = GetObjectVisual(obj);
                @if (objVisual.Visible)
                {
                    <div class="roadside-object" style="
                        bottom: @(objVisual.ScreenY)px;
                        left: calc(50% + @(objVisual.ScreenX)px);
                        transform: translateX(-50%) scale(@objVisual.Scale);
                        z-index: @(100 - (int)objVisual.ScreenY);
                    ">
                        @obj.Emoji
                    </div>
                }
            }
        </div>

        <!-- Player car -->
        <div class="player-car" style="left: calc(50% + @(playerX)px);">
            <div class="car-body @(isTurningLeft ? "turn-left" : "") @(isTurningRight ? "turn-right" : "")">
                🏎️
            </div>
            @if (speed > 100)
            {
                <div class="speed-lines"></div>
            }
        </div>

        <!-- Speedometer -->
        <div class="speedometer">
            <div class="speed-bar" style="width: @(Math.Min(speed / MaxSpeed * 100, 100))%;"></div>
        </div>
    </div>
</div>

<style>
