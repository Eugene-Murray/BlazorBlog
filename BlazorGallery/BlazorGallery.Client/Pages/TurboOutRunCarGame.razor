@code {
    private ElementReference gameContainer;
    private System.Timers.Timer? gameTimer;

    private bool gameStarted = false;
    private bool gameOver = false;
    private int score = 0;
    private double distance = 0;
    private TimeSpan timeRemaining = TimeSpan.FromSeconds(60);
    private DateTime lastTick = DateTime.Now;

    private const int GameWidth = 700;
    private const int GameHeight = 450;
    private const int RoadSegments = 60;
    private const int SegmentHeight = 5;
    private const double MaxSpeed = 200;
    private const double Acceleration = 0.5;
    private const double Deceleration = 0.3;
    private const double Friction = 0.1;
    private const double SteerSpeed = 5;
    private const double MaxSteer = 150;

    private double playerX = 0;
    private double speed = 0;
    private double roadPosition = 0;
    private double horizonOffset = 0;
    private double currentCurve = 0;
    private double targetCurve = 0;
    private double curveAccumulator = 0;

    private bool isTurningLeft = false;
    private bool isTurningRight = false;
    private bool isAccelerating = false;
    private bool isBraking = false;

    private List<OtherCar> otherCars = new();
    private List<RoadsideObject> roadsideObjects = new();
    private List<Cloud> clouds = new();
    private Random random = new();

    private double nextCarSpawn = 500;
    private double nextObjectSpawn = 100;
    private double nextCurveChange = 200;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await gameContainer.FocusAsync();
        }
    }

    protected override void OnInitialized()
    {
        InitializeGame();
    }

    private void InitializeGame()
    {
        otherCars.Clear();
        roadsideObjects.Clear();
        clouds.Clear();

        // Add initial clouds
        for (int i = 0; i < 5; i++)
        {
            clouds.Add(new Cloud
            {
                X = random.Next(0, GameWidth),
                Y = random.Next(10, 100),
                Scale = 0.5 + random.NextDouble() * 0.5,
                Speed = 0.2 + random.NextDouble() * 0.3
            });
        }

        // Add initial roadside objects
        for (int i = 0; i < 10; i++)
        {
            SpawnRoadsideObject(i * 200);
        }
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Code == "Space" && !gameStarted && !gameOver)
        {
            StartGame();
            return;
        }

        if (!gameStarted || gameOver) return;

        switch (e.Code)
        {
            case "ArrowLeft":
                isTurningLeft = true;
                break;
            case "ArrowRight":
                isTurningRight = true;
                break;
            case "ArrowUp":
                isAccelerating = true;
                break;
            case "ArrowDown":
                isBraking = true;
                break;
        }
    }

    private void HandleKeyUp(KeyboardEventArgs e)
    {
        switch (e.Code)
        {
            case "ArrowLeft":
                isTurningLeft = false;
                break;
            case "ArrowRight":
                isTurningRight = false;
                break;
            case "ArrowUp":
                isAccelerating = false;
                break;
            case "ArrowDown":
                isBraking = false;
                break;
        }
    }

    private void StartGame()
    {
        gameStarted = true;
        gameOver = false;
        score = 0;
        distance = 0;
        speed = 0;
        playerX = 0;
        roadPosition = 0;
        currentCurve = 0;
        targetCurve = 0;
        curveAccumulator = 0;
        timeRemaining = TimeSpan.FromSeconds(60);
        lastTick = DateTime.Now;
        nextCarSpawn = 500;
        nextObjectSpawn = 100;
        nextCurveChange = 200;

        InitializeGame();

        gameTimer = new System.Timers.Timer(16);
        gameTimer.Elapsed += GameLoop;
        gameTimer.Start();
    }

    private async void GameLoop(object? sender, ElapsedEventArgs e)
    {
        await InvokeAsync(() =>
        {
            if (gameOver) return;

            var now = DateTime.Now;
            var delta = (now - lastTick).TotalSeconds;
            lastTick = now;

            // Update timer
            timeRemaining -= TimeSpan.FromSeconds(delta);
            if (timeRemaining <= TimeSpan.Zero)
            {
                timeRemaining = TimeSpan.Zero;
                EndGame();
                return;
            }

            // Handle acceleration/braking
            if (isAccelerating)
            {
                speed = Math.Min(speed + Acceleration, MaxSpeed);
            }
            else if (isBraking)
            {
                speed = Math.Max(speed - Deceleration * 2, 0);
            }
            else
            {
                speed = Math.Max(speed - Friction, 0);
            }

            // Handle steering
            double steerFactor = speed / MaxSpeed;
            if (isTurningLeft)
            {
                playerX = Math.Max(playerX - SteerSpeed * steerFactor, -MaxSteer);
            }
            if (isTurningRight)
            {
                playerX = Math.Min(playerX + SteerSpeed * steerFactor, MaxSteer);
            }

            // Apply curve effect on player
            playerX += currentCurve * speed * 0.0008;
            playerX = Math.Clamp(playerX, -MaxSteer - 50, MaxSteer + 50);

            // Update road position
            double moveDistance = speed * delta * 2;
            roadPosition += moveDistance;
            distance += moveDistance;

            // Update horizon
            horizonOffset += currentCurve * speed * 0.001;

            // Update curve
            curveAccumulator += moveDistance;
            if (curveAccumulator >= nextCurveChange)
            {
                curveAccumulator = 0;
                nextCurveChange = 200 + random.Next(300);
                targetCurve = (random.NextDouble() - 0.5) * 40;
            }
            currentCurve += (targetCurve - currentCurve) * 0.01;

            // Score based on speed
            score += (int)(speed * delta * 0.5);

            // Update clouds
            foreach (var cloud in clouds)
            {
                cloud.X -= cloud.Speed + speed * 0.01;
                if (cloud.X < -50)
                {
                    cloud.X = GameWidth + 50;
                    cloud.Y = random.Next(10, 100);
                }
            }

            // Spawn and update other cars
            if (distance > nextCarSpawn)
            {
                SpawnOtherCar();
                nextCarSpawn = distance + 300 + random.Next(500);
            }
            UpdateOtherCars(moveDistance);

            // Spawn and update roadside objects
            if (distance > nextObjectSpawn)
            {
                SpawnRoadsideObject(1000);
                nextObjectSpawn = distance + 50 + random.Next(100);
            }
            UpdateRoadsideObjects(moveDistance);

            // Check off-road
            double roadWidth = GetRoadWidthAtPlayer();
            if (Math.Abs(playerX) > roadWidth / 2 + 20)
            {
                speed = Math.Max(speed - 2, 30);
            }

            // Check collision with other cars
            CheckCarCollisions();

            StateHasChanged();
        });
    }

    private void SpawnOtherCar()
    {
        string[] carEmojis = { "🚗", "🚕", "🚙", "🚌", "🏎️", "🚐" };
        int lane = random.Next(-1, 2);
        otherCars.Add(new OtherCar
        {
            Z = 1000,
            X = lane * 80,
            Speed = 30 + random.Next(60),
            Emoji = carEmojis[random.Next(carEmojis.Length)]
        });
    }

    private void UpdateOtherCars(double moveDistance)
    {
        for (int i = otherCars.Count - 1; i >= 0; i--)
        {
            otherCars[i].Z -= moveDistance - otherCars[i].Speed * 0.016;

            if (otherCars[i].Z < -50)
            {
                otherCars.RemoveAt(i);
                score += 50; // Points for passing a car
            }
        }
    }

    private void SpawnRoadsideObject(double z)
    {
        string[] leftObjects = { "🌲", "🌳", "🌴", "🏠", "⛽", "🗼" };
        string[] rightObjects = { "🌲", "🌳", "🌴", "🏠", "🏪", "🗿" };

        // Spawn on both sides
        roadsideObjects.Add(new RoadsideObject
        {
            Z = z,
            X = -250 - random.Next(50),
            Emoji = leftObjects[random.Next(leftObjects.Length)]
        });
        roadsideObjects.Add(new RoadsideObject
        {
            Z = z,
            X = 250 + random.Next(50),
            Emoji = rightObjects[random.Next(rightObjects.Length)]
        });
    }

    private void UpdateRoadsideObjects(double moveDistance)
    {
        for (int i = roadsideObjects.Count - 1; i >= 0; i--)
        {
            roadsideObjects[i].Z -= moveDistance;
            if (roadsideObjects[i].Z < -50)
            {
                roadsideObjects.RemoveAt(i);
            }
        }
    }

    private void CheckCarCollisions()
    {
        foreach (var car in otherCars)
        {
            if (car.Z < 100 && car.Z > 0)
            {
                double carWidth = 40;
                if (Math.Abs(playerX - car.X) < carWidth)
                {
                    EndGame();
                    return;
                }
            }
        }
    }

    private RoadSegmentVisual GetRoadSegment(int index)
    {
        double z = index * SegmentHeight;
        double perspective = (z + 1) / (RoadSegments * SegmentHeight);
        double roadWidth = 100 + perspective * 300;

        int segmentIndex = (int)((roadPosition + z) / 10);
        bool isStripe = segmentIndex % 2 == 0;

        double curve = currentCurve * perspective * perspective * 2;

        return new RoadSegmentVisual
        {
            RoadWidth = roadWidth,
            IsStripe = isStripe,
            Curve = curve
        };
    }

    private CarVisual GetCarVisual(OtherCar car)
    {
        if (car.Z < 0 || car.Z > 1000) return new CarVisual { Visible = false };

        double perspective = 1 - (car.Z / 1000.0);
        double scale = 0.3 + perspective * 1.5;
        double screenY = perspective * 250;
        double screenX = car.X * perspective + currentCurve * (1 - perspective) * 0.5;

        return new CarVisual
        {
            Visible = true,
            ScreenX = screenX,
            ScreenY = screenY,
            Scale = scale
        };
    }

    private ObjectVisual GetObjectVisual(RoadsideObject obj)
    {
        if (obj.Z < 0 || obj.Z > 1000) return new ObjectVisual { Visible = false };

        double perspective = 1 - (obj.Z / 1000.0);
        double scale = 0.2 + perspective * 1.2;
        double screenY = perspective * 250;
        double screenX = obj.X * perspective;

        return new ObjectVisual
        {
            Visible = true,
            ScreenX = screenX,
            ScreenY = screenY,
            Scale = scale
        };
    }

    private double GetRoadWidthAtPlayer()
    {
        return 100 + (1.0 / (RoadSegments * SegmentHeight)) * 300;
    }

    private void EndGame()
    {
        gameOver = true;
        gameTimer?.Stop();
        gameTimer?.Dispose();
        gameTimer = null;
    }

    private void RestartGame()
    {
        StartGame();
    }

    public void Dispose()
    {
        gameTimer?.Stop();
        gameTimer?.Dispose();
    }

    private class OtherCar
    {
        public double Z { get; set; }
        public double X { get; set; }
        public double Speed { get; set; }
        public string Emoji { get; set; } = "🚗";
    }

    private class RoadsideObject
    {
        public double Z { get; set; }
        public double X { get; set; }
        public string Emoji { get; set; } = "🌲";
    }

    private class Cloud
    {
        public double X { get; set; }
        public double Y { get; set; }
        public double Scale { get; set; }
        public double Speed { get; set; }
    }

    private class RoadSegmentVisual
    {
        public double RoadWidth { get; set; }
        public bool IsStripe { get; set; }
        public double Curve { get; set; }
    }

    private class CarVisual
    {
        public bool Visible { get; set; }
        public double ScreenX { get; set; }
        public double ScreenY { get; set; }
        public double Scale { get; set; }
    }

    private class ObjectVisual
    {
        public bool Visible { get; set; }
        public double ScreenX { get; set; }
        public double ScreenY { get; set; }
        public double Scale { get; set; }
    }
}
