@page "/"
@using BlazorExperiments.Components.Shared
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<p role="status">Current count from counter component: @currentCount</p>

<Counter IncrementAmount="10" IncrementFired="OnFired" />

@code {
	private int currentCount = 0;
	private void OnFired(int count)
	{
		Console.WriteLine($"IncrementFired: {count}");
		currentCount = count;
	}
}
