@page "/admin/roles/create"
@using Microsoft.AspNetCore.Identity
@using MudBlazor
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Create Role</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h4" Class="mb-4">Create New Role</MudText>

        <MudTextField @bind-Value="roleName" 
                      Label="Role Name" 
                      Required="true" 
                      RequiredError="Role name is required!"
                      Class="mb-4" />

        <MudStack Row="true" Spacing="2" Class="mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Create Role</MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    private string roleName = string.Empty;

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(roleName))
        {
            Snackbar.Add("Role name is required!", Severity.Warning);
            return;
        }

        var role = new IdentityRole(roleName);
        var result = await RoleManager.CreateAsync(role);

        if (result.Succeeded)
        {
            Snackbar.Add("Role created successfully!", Severity.Success);
            NavigationManager.NavigateTo("/admin/roles");
        }
        else
        {
            Snackbar.Add($"Error: {string.Join(", ", result.Errors.Select(e => e.Description))}", Severity.Error);
        }
    }

    private void Cancel() => NavigationManager.NavigateTo("/admin/roles");
}
