@page "/admin/roles/{RoleId}/claims"
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using MudBlazor
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer
@inject RoleManager<IdentityRole> RoleManager
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
@* @attribute [Authorize(Roles = "Admin")] *@

<PageTitle>Manage Role Claims</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudBreadcrumbs Items="_breadcrumbItems" Separator=">"></MudBreadcrumbs>
    
    @if (role != null)
    {
        <MudText Typo="Typo.h4" Class="mb-4">Manage Claims for Role: @role.Name</MudText>

        <MudPaper Class="pa-4 mb-4">
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       OnClick="OpenAddClaimDialog"
                       StartIcon="@Icons.Material.Filled.Add">
                Add Claim
            </MudButton>
        </MudPaper>

        <MudTable Items="@roleClaims" Dense="true" Hover="true" Loading="@loading" LoadingProgressColor="Color.Info">
            <HeaderContent>
                <MudTh>Claim Type</MudTh>
                <MudTh>Claim Value</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Claim Type">
                    <MudChip T="string" Color="Color.Primary" Size="Size.Small" Text="@context.Type" />
                </MudTd>
                <MudTd DataLabel="Claim Value">@context.Value</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                   Color="Color.Error" 
                                   Size="Size.Small"
                                   OnClick="@(() => RemoveClaim(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>

        @if (!roleClaims.Any() && !loading)
        {
            <MudPaper Class="pa-4 mt-4">
                <MudText Typo="Typo.body2" Color="Color.Secondary">No claims assigned</MudText>
            </MudPaper>
        }
    }
    else if (!loading)
    {
        <MudAlert Severity="Severity.Error">Role not found</MudAlert>
    }
</MudContainer>

@code {
    [Parameter] public string RoleId { get; set; } = default!;

    private IdentityRole? role;
    private List<Claim> roleClaims = new();
    private bool loading = true;
    private List<BreadcrumbItem> _breadcrumbItems = new();

    protected override async Task OnInitializedAsync()
    {
        _breadcrumbItems = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Admin", href: "/admin/roles"),
            new BreadcrumbItem("Roles", href: "/admin/roles"),
            new BreadcrumbItem("Claims", href: null, disabled: true)
        };

        await LoadData();
    }

    private async Task LoadData()
    {
        loading = true;
        role = await RoleManager.FindByIdAsync(RoleId);
        
        if (role != null)
        {
            roleClaims = (await RoleManager.GetClaimsAsync(role)).ToList();
        }
        
        loading = false;
    }

    private async Task OpenAddClaimDialog()
    {
        var parameters = new DialogParameters<AddClaimDialog>();
        
        var dialog = await DialogService.ShowAsync<AddClaimDialog>("Add Claim", parameters);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Claim claim)
        {
            var addResult = await RoleManager.AddClaimAsync(role!, claim);
            if (addResult.Succeeded)
            {
                await LoadData();
                Snackbar.Add("Claim added successfully!", Severity.Success);
            }
            else
            {
                Snackbar.Add($"Error: {string.Join(", ", addResult.Errors.Select(e => e.Description))}", Severity.Error);
            }
        }
    }

    private async Task RemoveClaim(Claim claim)
    {
        if (role == null) return;

        bool? result = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to remove claim '{claim.Type}: {claim.Value}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            var removeResult = await RoleManager.RemoveClaimAsync(role, claim);
            if (removeResult.Succeeded)
            {
                await LoadData();
                Snackbar.Add("Claim removed successfully!", Severity.Success);
            }
            else
            {
                Snackbar.Add($"Error: {string.Join(", ", removeResult.Errors.Select(e => e.Description))}", Severity.Error);
            }
        }
    }
}
