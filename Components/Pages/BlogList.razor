@page "/blog"
@using BlazorBlog.Data
@using BlazorBlog.Services
@inject BlogService BlogService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Blog Posts</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Blog Posts</h1>
        <AuthorizeView>
            <Authorized>
                @if (IsAdmin)
                {
                    <a href="/blog/create" class="btn btn-primary">
                        <span class="bi bi-plus-circle"></span> New Post
                    </a>
                }
            </Authorized>
        </AuthorizeView>
    </div>

    @if (blogPosts == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!blogPosts.Any())
    {
        <div class="alert alert-info text-center">
            <h4>No blog posts found</h4>
            <p class="mb-0">Check back later for new content!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var post in blogPosts)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 blog-post-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@post.Title</h5>
                            @if (!string.IsNullOrEmpty(post.Excerpt))
                            {
                                <p class="card-text">@post.Excerpt</p>
                            }
                            else
                            {
                                <p class="card-text">@GetTruncatedContent(post.Content, 150)</p>
                            }

                            <div class="mt-auto">
                                <small class="text-muted d-block mb-2">
                                    By @post.Author.UserName on @post.CreatedAt.ToString("MMM dd, yyyy")
                                    @if (!post.IsPublished)
                                    {
                                        <span class="badge bg-warning text-dark ms-2 draft-badge">Draft</span>
                                    }
                                </small>

                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/blog/@post.Id" class="btn btn-primary btn-sm">Read More</a>

                                    <AuthorizeView>
                                        <Authorized>
                                            @if (IsAdmin)
                                            {
                                                <div class="btn-group" role="group">
                                                    <a href="/blog/edit/@post.Id" class="btn btn-outline-secondary btn-sm">
                                                        <span class="bi bi-pencil"></span>
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => ConfirmDelete(post)">
                                                        <span class="bi bi-trash"></span>
                                                    </button>
                                                </div>
                                            }
                                        </Authorized>
                                    </AuthorizeView>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && postToDelete != null)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the blog post <strong>"@postToDelete.Title"</strong>?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteConfirmed">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BlogPost>? blogPosts;
    private bool IsAdmin;
    private bool showDeleteModal;
    private BlogPost? postToDelete;

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadBlogPosts();
        await CheckAdminStatus();
    }

    private async Task LoadBlogPosts()
    {
        try
        {
            if (AuthenticationStateTask != null)
            {
                var authState = await AuthenticationStateTask;
                if (authState.User.Identity?.IsAuthenticated == true && IsAdmin)
                {
                    blogPosts = await BlogService.GetAllBlogPostsAsync();
                }
                else
                {
                    blogPosts = await BlogService.GetPublishedBlogPostsAsync();
                }
            }
            else
            {
                blogPosts = await BlogService.GetPublishedBlogPostsAsync();
            }
        }
        catch (Exception)
        {
            blogPosts = new List<BlogPost>();
        }
    }

    private async Task CheckAdminStatus()
    {
        if (AuthenticationStateTask != null)
        {
            var authState = await AuthenticationStateTask;
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                IsAdmin = authState.User.HasClaim("IsAdmin", "True");
            }
        }
    }

    private string GetTruncatedContent(string content, int maxLength)
    {
        if (string.IsNullOrEmpty(content) || content.Length <= maxLength)
            return content;

        return content.Substring(0, maxLength) + "...";
    }

    private void ConfirmDelete(BlogPost post)
    {
        postToDelete = post;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        postToDelete = null;
        showDeleteModal = false;
    }

    private async Task DeleteConfirmed()
    {
        if (postToDelete != null)
        {
            try
            {
                await BlogService.DeleteBlogPostAsync(postToDelete.Id);
                await LoadBlogPosts();
                CancelDelete();
                StateHasChanged();
            }
            catch (Exception)
            {
                // Handle error - could add toast notification here
                CancelDelete();
            }
        }
    }
}